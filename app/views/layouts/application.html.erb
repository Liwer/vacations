<!DOCTYPE html>
<html>
  <head>
    <title>Vacations</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default">
  	<div class="container">
      <div class="row">
	      <div class="col-xs-12 col-sm-6 col-md-8">
		      <a class="logo" href="#">
				<h4>Vacation</h4>	
		      </a>
	      </div>
	      <div class="col-xs-6 col-md-4">
	   	      <% if user_signed_in? %>
		      	<p class="navbar-text">Signed in as <%= current_user.email %> </p>
		      		<li>
		  				<%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn") %>        
		  			</li>
    			<% else %>
		       		<%= link_to('Login', new_user_session_path, class: "btn btn-default navbar-btn")  %>  
				<% end %>
		</div>
 	 </div>
  </div>
</nav>
  	    <%= yield %>
  </body>
</html>
